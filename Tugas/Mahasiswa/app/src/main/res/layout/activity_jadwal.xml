<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccentDark"
    android:orientation="vertical"
    tools:context=".JadwalActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="64dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="1"
            android:padding="16dp"
            android:rowCount="6">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@color/colorAccentLight"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:textColor="@color/colorMainTitle"
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subuh"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                <TextView
                    android:textColor="@color/colorMainTitle"
                    android:id="@+id/textShubuh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="TextView"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginTop="16dp"
                android:background="@color/colorAccentLight"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:textColor="@color/colorMainTitle"
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Duha"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                <TextView
                    android:textColor="@color/colorMainTitle"
                    android:id="@+id/textDhuha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="TextView"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginTop="16dp"
                android:background="@color/colorAccentLight"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:textColor="@color/colorMainTitle"
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dhuhur"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                <TextView
                    android:textColor="@color/colorMainTitle"
                    android:id="@+id/textDhuhur"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="TextView"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginTop="16dp"
                android:background="@color/colorAccentLight"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:textColor="@color/colorMainTitle"
                    android:id="@+id/text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ashar"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                <TextView
                    android:textColor="@color/colorMainTitle"
                    android:id="@+id/textAshar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="TextView"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginTop="16dp"
                android:background="@color/colorAccentLight"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:textColor="@color/colorMainTitle"
                    android:id="@+id/text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Maghrib"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                <TextView
                    android:textColor="@color/colorMainTitle"
                    android:id="@+id/textMaghrib"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="TextView"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginTop="16dp"
                android:background="@color/colorAccentLight"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:textColor="@color/colorMainTitle"
                    android:id="@+id/text6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Isya"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                <TextView
                    android:textColor="@color/colorMainTitle"
                    android:id="@+id/textIsha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="TextView"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />
            </LinearLayout>
        </GridLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>