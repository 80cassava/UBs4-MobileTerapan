<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.7"
        android:scaleType="centerCrop"
        android:src="@drawable/img_activity" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView">

        <GridLayout
            android:id="@+id/gridLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:columnCount="3"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/gridLayout2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/cardIdentitas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:background="@drawable/border_button"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgIdentitas"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_gravity="center"
                    android:tint="@color/colorMainTitle"
                    app:srcCompat="@drawable/ic_place_black_24dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/identitas"
                    android:textColor="@color/colorMainTitle" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cardJadwal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:background="@drawable/border_button"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgJadwal"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_gravity="center"
                    android:tint="@color/colorMainTitle"
                    app:srcCompat="@drawable/ic_access_time_black_24dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/jadwal"
                    android:textColor="@color/colorMainTitle" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cardMarquee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:background="@drawable/border_button"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgMarquee"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_gravity="center"
                    android:tint="@color/colorMainTitle"
                    app:srcCompat="@drawable/ic_send_black_24dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/marquee"
                    android:textColor="@color/colorMainTitle" />
            </LinearLayout>
        </GridLayout>

        <GridLayout
            android:id="@+id/gridLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/cardPengumuman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:background="@drawable/border_button"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgPengumuman"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_gravity="center"
                    android:tint="@color/colorMainTitle"
                    app:srcCompat="@drawable/ic_announcement_black_24dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/pengumuman"
                    android:textColor="@color/colorMainTitle" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cardSlideshow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:background="@drawable/border_button"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgSlideshow"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_gravity="center"
                    android:tint="@color/colorMainTitle"
                    app:srcCompat="@drawable/ic_slideshow_black_24dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/slideshow"
                    android:textColor="@color/colorMainTitle" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cardTagline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:background="@drawable/border_button"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgTagline"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_gravity="center"
                    android:tint="@color/colorMainTitle"
                    app:srcCompat="@drawable/ic_label_outline_black_24dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/tagline"
                    android:textColor="@color/colorMainTitle" />
            </LinearLayout>
        </GridLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>